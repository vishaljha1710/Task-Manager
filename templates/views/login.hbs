<link rel="stylesheet" href="styles.css">
<style> input[type="text"]{
           padding: 10px;
           margin-bottom: 10px;
           border: 1px solid #ccc;
           border-radius: 5px;
       }</style>
  </head>
<body>  <div class="rcorners" >
  <div class="subdiv" id="fade">
 
    </div>
    <div class="subdiv">
   
    <div class="form-container">
       <br> <h2>Sign In</h2><br><br>
        <form class="custform" action="/login" method="POST">

            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
           {{#if error}}
        <p style="color: red;">{{error}}</p>
        {{else}}<br><br>{{/if}}
            <button class="custbutton" type="submit">Log In</button>
        </form>
        <span style="color: white;">New here?<a href="register"> Sign up</a></span>
    </div>

   </div>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
